<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.melon.withgil.ProtectorActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="보호자 연락처 :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ParentNum"
        android:layout_width="326dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="ex) 01012345678 => '-' 없이 적어주세요."
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="전송메시지 내용 : 지금 출발합니다."
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/ParentNum"
        app:layout_constraintTop_toBottomOf="@+id/ParentNum" />
<!--
    <EditText
        android:id="@+id/MessageCon"
        android:layout_width="fill_parent"
        android:layout_height="235dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="전송메시지 내용을 적어주세요."
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
-->
    <Button
        android:id="@+id/button"
        android:layout_width="146dp"
        android:layout_height="wrap_content"


        android:layout_marginBottom="24dp"


        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="#b267bf"
        android:onClick="OnclickButton"
        android:shadowColor="#834CC2"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="88"
        android:text="저 장"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>

